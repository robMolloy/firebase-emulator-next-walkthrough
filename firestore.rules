rules_version = '2';

function incomingData(){
  return request.resource.data
}


service cloud.firestore {
  match /databases/{database}/documents {
		match /comments/{id} {
      allow read: if true;
      allow create: if request.auth.uid == incomingData().uid;
      allow update: if false;
      allow delete: if true;
    }
  }
}